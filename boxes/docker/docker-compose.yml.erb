version: '3'
services:
  <%= service %>:
    image: <%= service %>-<%= user %>
    user: <%= user %>
    build:
      context: .
      args:
        uid: <%= uid %>
        user: <%= user %>
    tty: true
    stdin_open: true
    working_dir: /sandbox
    volumes:
    - <%= workdir %>:/sandbox
    - <%= homedir %>:/home
    <%- volumes.split(" ").each do |volume| -%>
    - "<%= volume %>"
    <%- end -%>
