version: '3'
services:
  <%= box.tr("/", "_") %>:
    image: sandbox-<%= box %>
    user: <%= ENV["USER"] %>
    build:
      context: .
      args:
        uid: <%= ENV["uid"] %>
        user: <%= ENV["USER"] %>
    tty: true
    stdin_open: true
    working_dir: /work
    volumes:
    - <%= workdir %>:/work
    <%- volumes.split(" ").each do |volume| -%>
    - "<%= volume %>"
    <%- end -%>
