Vagrant.configure("2") do |config|
  config.vm.define "sandbox-<%= box %>"
  <%-%><%= File.read("#{File.dirname(__FILE__)}/#{box}/vagrant_config.rb").gsub(/^/, "  ").chomp %>
  <%-
    (volumes || "").split(" ").each do |volume|
      /(?<src>[^:]*):(?<dst>[^;]*)(?:;(?<opts>.+))?/ =~ volume
      if opts
        opt_str = +""
        opts.split(";").each do |opt|
          /(?<key>[^=]*)=(?<val>.*)/ =~ opt
          opt_str << ", #{key}: #{val}"
        end
      end
  -%>
  config.vm.synced_folder "<%= src %>", "<%= dst %>"<%= opt_str %>
  <%- end -%>
end
